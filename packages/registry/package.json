{
  "name": "packages.registry",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*"
  },
  "main": "src/index.ts",
  "scripts": {
    "lint": "bunx --bun eslint",
    "lint:changed": "{ git diff --name-only -z --diff-filter=d --relative HEAD; git ls-files -z --others --exclude-standard -- ':./'; } | xargs -0 -r bunx --bun eslint --pass-on-no-patterns --no-warn-ignored",
    "lint:staged": "bunx --bun eslint --pass-on-no-patterns --no-warn-ignored $(git diff --relative --cached --name-only --diff-filter=d)",
    "lint:inspect": "bunx --bun eslint --inspect-config",
    "format": "bunx --bun eslint --fix",
    "format:changed": "{ git diff --name-only -z --diff-filter=d --relative HEAD; git ls-files -z --others --exclude-standard -- ':./'; } | xargs -0 -r bunx --bun eslint --fix --no-warn-ignored",
    "format:staged": "staged_files=$(git diff --relative --cached --name-only --diff-filter=d); bunx --bun eslint --fix --pass-on-no-patterns --no-warn-ignored $staged_files && git add $staged_files",
    "typecheck": "tsc --noEmit",
    "typecheck:tsgo": "tsgo --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "registry:build": "shadcn build"
  },
  "dependencies": {
    "@ark-ui/vue": "^5.30.0",
    "@fontsource-variable/geist": "^5.2.8",
    "@fontsource-variable/geist-mono": "^5.2.7",
    "@iconify/vue": "^5.0.0",
    "@vueuse/components": "^14.1.0",
    "@vueuse/core": "^14.1.0",
    "@vueuse/shared": "^14.1.0",
    "@zag-js/core": "^1.33.0",
    "@zag-js/vue": "^1.33.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.563.0",
    "nprogress": "^0.2.0",
    "shadcn": "^3.7.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "vue": "^3.5.27",
    "vue-sonner": "^2.0.9"
  },
  "devDependencies": {
    "@acfatah/eslint-preset": "^3.1.1",
    "@happy-dom/global-registrator": "^20.3.9",
    "@tailwindcss/vite": "^4.1.18",
    "@types/bun": "^1.3.6",
    "@types/common-tags": "^1.8.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/eslint-plugin": "^1.6.6",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "bun-types": "^1.3.6",
    "common-tags": "^1.8.2",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "vitest": "^4.0.18",
    "zod": "^4.3.6"
  }
}

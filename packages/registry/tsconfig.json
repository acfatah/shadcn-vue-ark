{
  "extends": [
    "@vue/tsconfig/tsconfig.dom.json"
  ],

  "compilerOptions": {
    "resolveJsonModule": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },


    "types": [
      "@types/bun",
      "vitest/globals"
    ]
  },

  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.vue"
  ],

  "exclude": [
    "dist",
    "node_modules"
  ]
}

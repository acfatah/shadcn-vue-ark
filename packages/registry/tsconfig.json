{
  "extends": [
    "../../tsconfig.json",
    "@vue/tsconfig/tsconfig.dom.json"
  ],

  "compilerOptions": {
    "resolveJsonModule": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"]
    },


    "types": [
      "@types/bun",
    ]
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],

  "exclude": [
    "dist",
    "node_modules"
  ]
}

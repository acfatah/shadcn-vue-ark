{
  "name": "apps.storybook",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "storybook build",
    "app:dev": "bunx --bun vite",
    "app:build": "bunx --bun vue-tsc -b && bunx --bun vite build",
    "preview": "bunx --bun vite preview",
    "lint": "bunx --bun eslint",
    "lint:changed": "{ git diff --name-only -z --diff-filter=d --relative HEAD; git ls-files -z --others --exclude-standard -- ':./'; } | xargs -0 -r bunx --bun eslint --pass-on-no-patterns --no-warn-ignored",
    "lint:staged": "bunx --bun eslint --pass-on-no-patterns --no-warn-ignored $(git diff --cached --name-only --diff-filter=d)",
    "lint:inspect": "bunx --bun eslint --inspect-config",
    "typecheck": "bunx --bun vue-tsc --noEmit",
    "format": "bunx --bun eslint --fix",
    "format:changed": "{ git diff --name-only -z --diff-filter=d --relative HEAD; git ls-files -z --others --exclude-standard -- ':./'; } | xargs -0 -r bunx --bun eslint --fix --no-warn-ignored",
    "format:staged": "staged_files=$(git diff --relative --cached --name-only --diff-filter=d); bunx --bun eslint --fix --pass-on-no-patterns --no-warn-ignored $staged_files && git add $staged_files",
    "precommit": "bun lint:staged"
  },
  "dependencies": {
    "@ark-ui/vue": "^5.29.1",
    "@fontsource-variable/geist": "^5.2.8",
    "@fontsource-variable/geist-mono": "^5.2.7",
    "@iconify/vue": "^5.0.0",
    "@tailwindcss/vite": "^4.1.17",
    "@vueuse/components": "^14.1.0",
    "@vueuse/core": "^14.1.0",
    "@vueuse/integrations": "^14.1.0",
    "@vueuse/router": "^14.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "nprogress": "^0.2.0",
    "packages.registry": "workspace:*",
    "pinia": "^3.0.4",
    "simple-git-hooks": "^2.13.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/markdown": "^7.5.1",
    "@storybook/addon-docs": "^10.1.2",
    "@storybook/addon-themes": "^10.1.2",
    "@storybook/vue3-vite": "^10.1.2",
    "@types/bun": "^1.3.3",
    "@types/common-tags": "^1.8.4",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/tsconfig": "^0.8.1",
    "commander": "^14.0.2",
    "common-tags": "^1.8.2",
    "consola": "^3.4.2",
    "eslint": "^9.39.1",
    "eslint-plugin-better-tailwindcss": "^3.7.11",
    "eslint-plugin-format": "^1.0.2",
    "eslint-plugin-storybook": "^10.1.2",
    "jiti": "^2.6.1",
    "storybook": "^10.1.2",
    "typescript": "~5.9.3",
    "vite": "^7.2.6",
    "vite-svg-loader": "^5.1.0",
    "vue-tsc": "^3.1.5"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "esbuild",
    "simple-git-hooks"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "bun precommit",
    "commit-msg": "bun commitlint --edit ${1}"
  }
}
